Bootstrap: docker
From: ubuntu:24.04

%files
    ../../BigBrother $HOME/

%environment
    export TF_ENABLE_ONEDNN_OPTS=0
    export BigBrother=$HOME/BigBrother

%post
    mkdir -p /scratch/BigBrother/tmp

    cd $HOME/BigBrother

    apt-get update
    apt-get upgrade -y
    apt-get install curl make findutils -y

    curl -LsSf https://astral.sh/uv/install.sh | sh

    uv sync --no-cache

    uv cache clean

%test
    uv run python --version

%labels
    Author kban20@student.aau.dk
    Version v0.0.1

%help
    This is a template container for easy use on ai-lab